<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :quorum_percentage, input_html: { min: 0, max: 100 } %>
  <%= f.association :users, as: :check_boxes %>
  <%= f.button :submit, class: 'btn-primary' %>
  <% if @group.persisted? %>
    <%= link_to 'View', @group, class: 'btn btn-default' %>
    <%= link_to 'Remove', @group, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
  <% end %>
<% end %>
