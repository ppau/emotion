<%= render 'admin_breadcrumbs' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, edit_group_path(group) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Group', new_group_path, class: 'btn btn-primary' %>
